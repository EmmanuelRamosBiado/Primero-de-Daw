<!DOCTYPE instituto SYSTEM "Ejercicio_01.dtd">
<instituto>
    <!-- profesores-->
    <lista_profesores>
        <!-- NRP va a ser un ID-->
        <profesor NRP="nrp-1">
            <nombre>Juan</nombre>
            <apellido1>Sánchez</apellido1>
            <!-- apellido2 es opcional-->
            <apellido2>Buesing</apellido2>
        </profesor>
        <profesor NRP="nrp-2">
            <nombre>Anna</nombre>
            <apellido1>Gómez</apellido1>
        </profesor>
    </lista_profesores>

    <!-- asignaturas-->
    <lista_asignaturas>
        <!-- el atributo profesor es un IDREF a NRP de profesor-->
        <asignatura codigo="c1" profesor="nrp-1">
            <a_nombre>Biología</a_nombre>
        </asignatura>
        <asignatura codigo="c2" profesor="nrp-2">
            <a_nombre>Lengua</a_nombre>
        </asignatura>
    </lista_asignaturas>

    <!-- cursos-->
    <lista_cursos>
        <curso>
            <lista_alumno>
                <!-- el dni sera el id del alumno-->
                <alumno dni="DNI-123456789Z">
                    <nombre>Lucas</nombre>
                    <apellido1>Nakashima</apellido1>
                    <!-- apellido2 es opcional-->
                    <apellido2>Omouveka</apellido2>
                    <asignaturas en_curso="c1 c2" />
                </alumno>
                <alumno dni="DNI-87654321Z">
                    <nombre>Molly</nombre>
                    <apellido1>Night</apellido1>
                    <asignaturas en_curso="c2" />
                </alumno>
            </lista_alumno>
        </curso>
    </lista_cursos>
</instituto>